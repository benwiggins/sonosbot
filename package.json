{
  "name": "sonosbot",
  "version": "0.1.0",
  "description": "Control Sonos/Spotify through Slack.",
  "main": "index.js",
  "repository": "https://github.com/benwiggins/sonosbot.git",
  "author": "Ben Wiggins",
  "license": "MIT",
  "scripts": {
    "start": "DEBUG=sonosbot:* node index.js",
    "lint": "eslint src",
    "prettier": "prettier --write '**/*.js'",
    "test": "NODE_ENV=${NODE_ENV:=test} DEBUG=sonosbot:*,test:* ./node_modules/.bin/mocha --recursive --exit --timeout 10000",
    "test-coverage": "nyc yarn test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-spies": "1.0.0",
    "dirty-chai": "2.0.1",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "3.0.2",
    "lint-staged": "9.2.1",
    "mocha": "6.2.0",
    "nock": "10.0.6",
    "nyc": "14.1.1",
    "prettier": "1.18.2"
  },
  "dependencies": {
    "@slack/client": "5.0.2",
    "debug": "4.1.1",
    "form-data": "2.5.0",
    "got": "9.6.0",
    "lodash": "4.17.15",
    "node-cache": "4.2.1",
    "sonos": "1.12.2",
    "supports-color": "7.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
